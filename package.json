    "@iconify-json/simple-icons": "^1.2.58",
    "@nuxt/eslint": "^1.10.0",
    "@nuxt/fonts": "^0.12.1",
    "@nuxt/icon": "^2.1.0",
    "@nuxt/scripts": "^0.13.0",
    "@nuxthub/core": "^0.9.0",
    "@nuxtjs/color-mode": "^3.5.2",
    "@nuxtjs/sitemap": "^7.4.7",
    "@types/bootstrap": "^5.2.10",
    "@types/node": "^24.10.0",
    "@vue/compiler-sfc": "^3.5.24",
    "@vuepic/vue-datepicker": "^12.0.3",
    "@vueuse/nuxt": "^14.0.0",
