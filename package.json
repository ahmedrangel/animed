    "@iconify-json/simple-icons": "^1.2.28",
    "@nuxt/eslint": "^1.2.0",
    "@nuxt/fonts": "^0.11.0",
    "@nuxt/icon": "^1.11.0",
    "@nuxt/scripts": "^0.11.2",
    "@nuxthub/core": "^0.8.18",
    "@nuxtjs/color-mode": "^3.5.2",
    "@nuxtjs/sitemap": "^7.2.9",
    "@types/bootstrap": "^5.2.10",
    "@vueuse/nuxt": "^13.0.0",
    "date-fns": "^4.1.0",
    "drizzle-kit": "^0.30.5",
    "drizzle-orm": "^0.40.0",
    "eslint": "9.22.0",
    "gql-payload": "^2.1.0",
    "nuxt": "^3.16.0",
