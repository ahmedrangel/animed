    "eslint": "9.39.1",
    "gql-payload": "^2.1.0",
    "nuxt": "4.2.1",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "^5.9.3",
    "wrangler": "^4.46.0"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "idb-keyval": "^6.2.2",
    "nuxt-aos": "^1.2.5",
    "nuxt-auth-utils": "0.5.25",
    "nuxt-ripple": "^0.0.8"
  },
  "packageManager": "pnpm@10.21.0"
