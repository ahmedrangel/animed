    "bootstrap": "^5.3.3",
    "idb-keyval": "^6.2.1",
    "nuxt-aos": "^1.2.5",
    "nuxt-auth-utils": "0.5.16",
    "nuxt-ripple": "^0.0.8"
  },
  "resolutions": {
    "vue-router": "4.4.5"
  },
  "packageManager": "pnpm@10.6.3"
